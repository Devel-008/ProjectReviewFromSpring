{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "title":"Student",
  "description": "Details about student and his personal details and marks details",
  "type": "array",
  "students": {
    "type": "object",
    "properties": {
      "id": {
        "description": "The unique identifier for a product",
        "type": "integer"
      },
      "studentName": {
        "description": "Enter the the StudentName",
        "type": "string"
      },
      "lastName": {
        "description": "Enter LastName",
        "type": "string"
      },
      "fatherName": {
        "description": "Enter the Father-Name",
        "type": "string"
      },
      "motherName": {
        "description": "Enter the Mother-Name",
        "type": "string"
      },
      "address": {
        "description": "Enter the Address",
        "type": "string"
      },
      "dob": {
        "type":"string",
        "format": "date",
        "description": "Enter the Date of Birth in format of YYYY-MM-DD"
      },
      "english": {
        "description": "Enter the English marks",
        "type": "number"
      },
      "hindi": {
        "description": "Enter the Hindi marks",
        "type": "number"
      },
      "maths": {
        "description": "Enter the Maths marks",
        "type": "number"
      },
      "science": {
        "description": "Enter the Science marks",
        "type": "number"
      },
      "social": {
        "description": "Enter the Social marks",
        "type": "number"
      },
      "required" : ["id","studentName","lastName","fatherName","motherName","address","dob","english","hindi","maths","science","social"]
    }
  }
}